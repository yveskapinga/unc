{% extends 'base.html.twig' %}

{% block title %}Notification{% endblock %}

{% block body %}
    <h1>Notification</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Type</th>
                <td>: {{ notification.type }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>: {{ notification.content | raw }}</td>
            </tr>
            <tr>
                <th>Générée le</th>
                <td>: {{ notification.createdAt ? notification.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

