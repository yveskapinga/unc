{% extends 'base.html.twig' %}

{% block title %}Notification{% endblock %}

{% block body %}
    <h4>Notification</h4>

    <table class="table datatable">
        <thead>
            <tr>
                <th>#</th>
                <th>Type</th>
                <th>Contenu</th>
                <th>Lu</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for notification in notifications %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ notification.type }}</td>
                <td>{{ notification.content }}</td>
                <td>{{ notification.isRead ? 'Oui' : 'Non' }}</td>
                <td>{{ notification.createdAt ? notification.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_notification_show', {'id': notification.id}) }}">voir</a>
                    <a href="{{ path('app_notification_edit', {'id': notification.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucune notification</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_notification_new') }}">Create new</a> #}
{% endblock %}
