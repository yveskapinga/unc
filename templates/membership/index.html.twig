{% extends 'base.html.twig' %}

{% block title %}Membership index{% endblock %}

{% block body %}
    <h1>Membership index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Membre</th>
                <th>Level</th>
                <th>FeeAmount</th>
                <th>FeePaidAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for membership in memberships %}
            <tr>
                <td>{{ membership.theUser.username }}</td>
                <td>{{ membership.level }}</td>
                <td>{{ membership.feeAmount }}</td>
                <td>{{ membership.feePaidAt ? membership.feePaidAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_membership_show', {'id': membership.id}) }}">show</a>
                    <a href="{{ path('app_membership_edit', {'id': membership.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_membership_new') }}">Create new</a>
{% endblock %}
