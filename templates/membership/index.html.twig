{% extends 'base.html.twig' %}

{% block title %}membres{% endblock %}

{% block body %}
    <h1>Les membres</h1>

    <table class="table datatable">
        <thead>
            <tr>
                <th>Membre</th>
                <th>Niveau</th>
                <th>Catégorie</th>
                <th>Fonction</th>
                <th>Interfédération</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for membership in memberships %}
            <tr>
                <td>{{ membership.theUser.username }}</td>
                <td>{{ membership.level }}</td>
                <td>{{ membership.membershipType}}</td>
                <td>{{ membership.fonction }}</td>
                <td>{{ membership.interfederation }}</td>
                <td>
                    <a href="{{ path('app_membership_show', {'id': membership.id}) }}" title ="Voir"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('app_membership_edit', {'id': membership.id}) }}" title ="Voir"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune donnée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <i class="fas fa-plus" title ="ajouter"></i><a href="{{ path('app_membership_new') }}" class="btn btn-primary">Ajouter</a>
{% endblock %}
