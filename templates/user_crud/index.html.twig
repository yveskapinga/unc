{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <table class="table datatable">
        <thead>
            <tr>
                <th>Email</th>
                <th>Roles</th>
                <th>Date d'int√©gration</th>
                <th>Statut</th>
                <th>Pseudo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.joinedAt ? user.joinedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.isActive ? 'Actif' : 'Inactif' }}</td>
                <td>{{ user.username }}</td>
                <td>
                    <a href="{{ path('app_user_crud_show', {'id': user.id}) }}"><i class="fas fa-eye" title ="Voir"></i>voir</a>
                    <a href="{{ path('app_user_crud_edit', {'id': user.id}) }}"><i class="fas fa-edit" title ="Modifier"></i>edit</a>
                    <a href="{{ path('app_user_crud_delete', {'id': user.id}) }}"><i class="fas fa-edit" title ="Modifier"></i>drop</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_crud_new') }}">Create new</a>
{% endblock %}
