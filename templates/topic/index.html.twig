{# templates/topic/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Sujets{% endblock %}

{% block body %}
    

            {% for topic in topics %}
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <!-- Post preview-->
                    <div class="post-preview">
                        <a href="#">
                            <p class="post-title"><a href="{{ path('app_topic_show', { 'id': topic.id }) }}">{{ topic.title }}</a></p>
                            <p class="post-subtitle">{{topic.description}}</p>
                        </a>
                        <p class="post-meta">
                            Posté par
                            <a href="#!">{{ topic.author.username }}</a>
                            le <small>{{ topic.createdAt|date('d/m/Y H:i') }}</small>
                        </p>
                    </div>
                    <!-- Divider-->
                    <hr class="my-4" />
                </div>
            {% else %}
                <p>Aucun sujet trouvé</P>
            {% endfor %}
            <div class="d-flex justify-content-end mb-4">
                <a class="btn btn-primary text-uppercase" href="#!">Anciens Posts →</a>
            </div>
            <div class="d-flex justify-content-end mb-4">
                <a href="{{ path('app_topic_new') }}" class="btn btn-primary">Créer un nouveau sujet</a>
            </div>

{% endblock %}

