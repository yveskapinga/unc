{% extends 'template_site.html.twig' %}
{% block title %}Article{% endblock %}

{% block body %}
    <!-- Page Title -->
    <div class="page-title position-relative">
      <div class="container d-lg-flex justify-content-between align-items-center">
        <h1 class="mb-2 mb-lg-0">Article</h1>
        <nav class="breadcrumbs">
          <ol>
            <li><a href="{{path('new-index')}}">Accueil</a></li>
            <li class="current">Article</li>
          </ol>
        </nav>
      </div>
    </div><!-- End Page Title -->

    <div class="container">
      <div class="row">

        <div class="col-lg-8">

          <!-- Blog Posts Section -->
          <section id="blog-posts" class="blog-posts section">

            <div class="container">
              <div class="row gy-4">
              {% for topic in topics %}
                
              
                <div class="col-lg-6">
                  <article class="position-relative h-100">

                    <div class="post-img position-relative overflow-hidden">
                      <img src="{{ asset('uploads/pictures/' ~ topic.category.image) }}" class="img-fluid" alt="">
                      <span class="post-date">{{topic.createdAt | date('d-m-Y Ã  H:i')}}</span>
                    </div>

                    <div class="post-content d-flex flex-column">

                      <h3 class="post-title">{{topic.title}}</h3>

                      <div class="meta d-flex align-items-center">
                        <div class="d-flex align-items-center">
                          <i class="bi bi-person"></i> <span class="ps-2">{{topic.author.username}}</span>
                        </div>
                        <span class="px-3 text-black-50">/</span>
                        <div class="d-flex align-items-center">
                          <i class="bi bi-folder2"></i> <span class="ps-2">{{topic.category.name}}</span>
                        </div>
                      </div>

                      <p>
                        {{topic.content}}
                      </p>

                      <hr>

                      <a href="{{path('single-post', {'id':topic.id})}}" class="readmore stretched-link"><span>Read More</span><i class="bi bi-arrow-right"></i></a>

                    </div>

                  </article>
                </div><!-- End post list item -->

              {% endfor %}
              </div>
            </div>

          </section><!-- /Blog Posts Section -->

          <!-- Blog Pagination Section -->
          {# <section id="blog-pagination" class="blog-pagination section">

            <div class="container">
              <div class="d-flex justify-content-center">
