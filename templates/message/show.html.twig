{# templates/message/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1>Message</h1>

    <div class="message {{ message.sender == app.user ? 'Envoyé' : 'Reçu' }}">
        <div class="message-header">
            <strong>{{ message.sender == app.user ? 'A: ' ~ message.recipient.username : 'De: ' ~ message.sender.username }}</strong>
            <span class="message-date">{{ message.createdAt|date('Y-m-d H:i') }}</span>
        </div>
        <div class="message-content">
            {{ message.content }}
        </div>
    </div>

    <a href="{{ path('app_message_index') }}" class="btn btn-secondary">Retour aux messages</a>
    {{ include('message/_delete_form.html.twig') }}
{% endblock %}
