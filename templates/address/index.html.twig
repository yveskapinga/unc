{% extends 'base.html.twig' %}

{% block title %}Addresses{% endblock %}

{% block body %}
    <h1>Les adresses</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Number</th>
                <th>Street</th>
                <th>City</th>
                <th>Country</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.user.username }}</td>
                <td>{{ address.number }}</td>
                <td>{{ address.street }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.country }}</td>
                <td>
                    <a href="{{ path('app_address_show', {'id': address.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('app_address_edit', {'id': address.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_address_new') }}">Ajouter une adresse</a>
{% endblock %}
