{{ form_start(form) }}
            <div class="form-section">
                <h3 class="form-section-title">Général</h3>
                <div class="form-group">
                    {{ form_row(form.designation) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.sif) }}
                </div>
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Adresse</h3>
                <div class="form-group">
                    {{ form_row(form.siege.number) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.siege.street) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.siege.city) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.siege.province) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.siege.country) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.siege.postalCode) }}
                </div>
            </div>

            <div class="form-section">
                <button class="btn btn-primary">{{ button_label|default('Envoyer') }}</button>            
            </div>
    
{{ form_end(form) }}
